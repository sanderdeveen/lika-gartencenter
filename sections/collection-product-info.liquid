<link rel="stylesheet" href="{{ 'section-product-info.css' | asset_url }}" media="print" onload="this.media='all'">

<div class="page-width border-radius product-information">
  <h2 class="bestsellers-header product-information--header">{{ section.settings.heading }}</h2>

  {%- if section.settings.image != blank -%}
    {% assign image_width = 164 %}
    <a href="{{ section.settings.url }}">
      <img
        srcset="{%- if image_width >= 375 -%}{{ section.settings.image | image_url: width: 375 }} 375w,{%- endif -%}
          {%- if image_width >= 750 -%}{{ section.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
          {%- if image_width >= 1100 -%}{{ section.settings.image | image_url: width: 1100 }} 1100w,{%- endif -%}
          {%- if image_width >= 1500 -%}{{ section.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
          {%- if image_width >= 1780 -%}{{ section.settings.image | image_url: width: 1780 }} 1780w,{%- endif -%}
          {%- if image_width >= 2000 -%}{{ section.settings.image | image_url: width: 2000 }} 2000w,{%- endif -%}
          {%- if image_width >= 3000 -%}{{ section.settings.image | image_url: width: 3000 }} 3000w,{%- endif -%}
          {%- if image_width >= 3840 -%}{{ section.settings.image | image_url: width: 3840 }} 3840w,{%- endif -%}
          {{ section.settings.image | image_url }} {{ image_width }}w"
        sizes="100vw"
        src="{{ section.settings.image | image_url: width: 1500 }}"
        loading="lazy"
        alt="{{ section.settings.image.alt | escape }}"
        width="{{ image_width }}"
        height="{{ image_width | divided_by: section.settings.contact_img.aspect_ratio }}"
      >
    </a>
  {%- else -%}
    {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
  {%- endif -%}
  <div class="product-information--information">
    {%- if section.settings.content -%}
      {{ section.settings.content }}
    {%- endif -%}
    {%- if section.settings.url != blank -%}
      <a class="button product-information--button" href="{{ section.settings.url }}">{{- section.settings.btn_text -}}</a>
    {%- endif -%}  
  </div>
</div>

{% schema %}
{
  "name": "Product information",
  "tag": "section",
  "class": "product-information-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "richtext",
      "id": "content", 
      "label": "Content"
    },
    {
      "type": "url",
      "id": "url",
      "label": "Url",
      "info": "Url for btn and image"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text"
    }
  ],
  "presets": [
    {
      "name": "Product information"
    }
  ]
}
{% endschema %}